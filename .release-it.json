{
 "git": {
    "commitMessage": "Release ${version}",
    "requireCleanWorkingDir": false,
    "tagName": "${version}",
    "requireCommits": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "example/package.json",
        "example/android/app/build.gradle",
        "example/ios/Podfile.lock"
      ]
    }
  }
}
